<% layout("../views/layout/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-3">
    <h3>Listing Details :</h3>
  </div>
    <div class="card col-6 offset-3 " >
      <img src="<%= listing.image %>" 
      class="card-img-top show-img" 
      alt="listing_image" 
      style="height: 20rem; width: 20rem">
      <br>
      <div class="card-body">
        <p class="card-text"> <b><%= listing.title %>  </b></p>
        &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %>/night
      </div>
      
        <ul>
          <li><%= listing.title %></li>
          <li><%= listing.description %></li>
          <li>&#8377; <%= listing.price.toLocaleString("en-IN") %></li>
          <li><%= listing.location %></li>
          <li><%= listing.country %></li>
        </ul>
        
      </div>
    <div class="btns offset-4">
      <a href="/listings/<%= listing._id %>/edit " class="btn btn-dark add-btn">Edit</a>
    
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button  class="btn btn-dark offset-8">Delete</button>
      </form>

    </div>
</div>
<br><br>